{
  "name": "chrome-extension-svelte-bolierplate",
  "version": "0.0.2",
  "description": "A boilerplate for chrome extension with svelte",
  "manifest_version": 3,
  "icons": {
    "16": "./assets/icons/icon16.png",
    "32": "./assets/icons/icon32.png",
    "48": "./assets/icons/icon48.png",
    "64": "./assets/icons/icon64.png",
    "128": "./assets/icons/icon128.png"
  },
  "permissions": ["cookies", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "popup",
    "default_icon": {
      "16": "./assets/icons/icon16.png",
      "32": "./assets/icons/icon32.png",
      "48": "./assets/icons/icon48.png",
      "64": "./assets/icons/icon64.png",
      "128": "./assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://arco.design/iconbox/mime/lib/496/*",
        "https://arco.design/iconbox/lib/496/*"
      ],
      "js": ["content-scripts.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
